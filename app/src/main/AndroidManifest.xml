<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dog_app">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dog_App">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Dog_App.NoActionBar">

        </activity>

        <activity android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Dog_App.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AboutUsActivity" android:exported="true" android:theme="@style/Theme.Dog_App.NoActionBar"
            />
        <activity android:name=".AddDogActivity" android:exported="true" android:theme="@style/Theme.Dog_App.NoActionBar"
            />
        <activity android:name=".DogDetailsActivity" android:exported="true" android:theme="@style/Theme.Dog_App.NoActionBar"/>

    </application>

</manifest>